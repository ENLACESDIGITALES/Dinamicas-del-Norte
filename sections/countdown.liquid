{% comment %}
  Contador Regresivo Simple y Efectivo para Shopify
{% endcomment %}

<div class="countdown-timer-section" style="background-color: {{ section.settings.background_color }};">
  <div class="countdown-timer-container">
    {% if section.settings.show_title %}
      <h2 class="countdown-title" style="color: {{ section.settings.text_color }};">
        {{ section.settings.title_text }}
      </h2>
    {% endif %}

    <div class="timer-display">
      {% if section.settings.show_days %}
        <div class="timer-block">
          <div
            class="timer-number"
            style="background-color: {{ section.settings.timer_background_color }}; color: {{ section.settings.timer_text_color }};"
          >
            <span id="days">00</span>
          </div>
          <div class="timer-label" style="color: {{ section.settings.text_color }};">
            {{ section.settings.days_label }}
          </div>
        </div>
      {% endif %}

      <div class="timer-block">
        <div
          class="timer-number"
          style="background-color: {{ section.settings.timer_background_color }}; color: {{ section.settings.timer_text_color }};"
        >
          <span id="hours">00</span>
        </div>
        <div class="timer-label" style="color: {{ section.settings.text_color }};">
          {{ section.settings.hours_label }}
        </div>
      </div>

      <div class="timer-block">
        <div
          class="timer-number"
          style="background-color: {{ section.settings.timer_background_color }}; color: {{ section.settings.timer_text_color }};"
        >
          <span id="minutes">00</span>
        </div>
        <div class="timer-label" style="color: {{ section.settings.text_color }};">
          {{ section.settings.minutes_label }}
        </div>
      </div>

      <div class="timer-block">
        <div
          class="timer-number"
          style="background-color: {{ section.settings.timer_background_color }}; color: {{ section.settings.timer_text_color }};"
        >
          <span id="seconds">00</span>
        </div>
        <div class="timer-label" style="color: {{ section.settings.text_color }};">
          {{ section.settings.seconds_label }}
        </div>
      </div>
    </div>

    {% if section.settings.show_message_after and section.settings.message_after_end != blank %}
      <div id="end-message" style="display: none; color: {{ section.settings.text_color }};">
        {{ section.settings.message_after_end }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .countdown-timer-section {
    padding: 20px 10px;
    text-align: center;
  }

  .countdown-timer-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .countdown-title {
    margin-bottom: 20px;
    font-size: {{ section.settings.title_size }}px;
    font-weight: bold;
    {% if section.settings.title_uppercase %}
      text-transform: uppercase;
    {% endif %}
  }

  .timer-display {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .timer-block {
    margin: 0 5px;
  }

  .timer-number {
    width: {{ section.settings.timer_size }}px;
    height: {{ section.settings.timer_size }}px;
    border-radius: {{ section.settings.timer_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: calc({{ section.settings.timer_size }}px * 0.5);
    font-weight: bold;
    margin-bottom: 5px;
  }

  .timer-label {
    font-size: {{ section.settings.label_size }}px;
    {% if section.settings.label_bold %}
      font-weight: bold;
    {% endif %}
  }

  #end-message {
    margin-top: 20px;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .countdown-title {
      font-size: calc({{ section.settings.title_size }}px * 0.8);
    }

    .timer-number {
      width: calc({{ section.settings.timer_size }}px * 0.8);
      height: calc({{ section.settings.timer_size }}px * 0.8);
      font-size: calc({{ section.settings.timer_size }}px * 0.4);
    }

    .timer-label {
      font-size: calc({{ section.settings.label_size }}px * 0.9);
    }
  }

  @media (max-width: 480px) {
    .timer-display {
      gap: 10px;
    }

    .timer-number {
      width: calc({{ section.settings.timer_size }}px * 0.7);
      height: calc({{ section.settings.timer_size }}px * 0.7);
      font-size: calc({{ section.settings.timer_size }}px * 0.35);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Determinar la fecha final
    let targetDate;

    {% if section.settings.date_type == 'specific_date' %}
      targetDate = new Date("{{ section.settings.end_date }}").getTime();
    {% else %}
      targetDate = new Date();
      targetDate.setHours(targetDate.getHours() + {{ section.settings.duration_hours }});
      targetDate.setMinutes(targetDate.getMinutes() + {{ section.settings.duration_minutes }});
      targetDate = targetDate.getTime();
    {% endif %}

    // Si el temporizador es persistente, usar localStorage
    {% if section.settings.persistent_timer %}
      const storedDate = localStorage.getItem('countdownEndTime');
      if (storedDate) {
        targetDate = parseInt(storedDate);
      } else {
        localStorage.setItem('countdownEndTime', targetDate);
      }
    {% endif %}

    // Actualizar contador cada segundo
    const countdown = setInterval(function() {
      const now = new Date().getTime();
      const timeLeft = targetDate - now;

      // Calcular tiempo
      const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

      // Actualizar elementos
      if (document.getElementById("days")) {
        document.getElementById("days").innerHTML = days < 10 ? "0" + days : days;
      }
      document.getElementById("hours").innerHTML = hours < 10 ? "0" + hours : hours;
      document.getElementById("minutes").innerHTML = minutes < 10 ? "0" + minutes : minutes;
      document.getElementById("seconds").innerHTML = seconds < 10 ? "0" + seconds : seconds;

      // Si el tiempo terminó
      if (timeLeft < 0) {
        clearInterval(countdown);

        // Mostrar ceros
        if (document.getElementById("days")) {
          document.getElementById("days").innerHTML = "00";
        }
        document.getElementById("hours").innerHTML = "00";
        document.getElementById("minutes").innerHTML = "00";
        document.getElementById("seconds").innerHTML = "00";

        // Mostrar mensaje final
        const endMessage = document.getElementById("end-message");
        if (endMessage) {
          endMessage.style.display = "block";
        }

        // Redireccionar si está configurado
        {% if section.settings.redirect_after_end and section.settings.redirect_url != blank %}
        setTimeout(function() {
          window.location.href = "{{ section.settings.redirect_url }}";
        }, {{ section.settings.redirect_delay }} * 1000);
        {% endif %}

        // Ocultar contador si está configurado
        {% if section.settings.hide_after_end %}
        setTimeout(function() {
          document.querySelector('.countdown-timer-section').style.display = 'none';
        }, 3000);
        {% endif %}

        // Limpiar localStorage si es necesario
        {% if section.settings.persistent_timer %}
        localStorage.removeItem('countdownEndTime');
        {% endif %}
      }
    }, 1000);
  });
</script>

{% schema %}
{
  "name": "Contador Regresivo",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de texto",
      "default": "#333333"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Mostrar título",
      "default": true
    },
    {
      "type": "text",
      "id": "title_text",
      "label": "Texto del título",
      "default": "FALTA POCO TIEMPO PARA QUE ESTA OFERTA TERMINE"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "label": "Tamaño del título (px)",
      "default": 18
    },
    {
      "type": "checkbox",
      "id": "title_uppercase",
      "label": "Título en mayúsculas",
      "default": true
    },
    {
      "type": "select",
      "id": "date_type",
      "label": "Tipo de cuenta regresiva",
      "options": [
        {
          "value": "duration",
          "label": "Duración desde ahora"
        },
        {
          "value": "specific_date",
          "label": "Fecha específica"
        }
      ],
      "default": "duration"
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "Fecha final (YYYY-MM-DD)",
      "default": "2025-12-31"
    },
    {
      "type": "number",
      "id": "duration_hours",
      "label": "Duración (horas)",
      "default": 24
    },
    {
      "type": "number",
      "id": "duration_minutes",
      "label": "Duración (minutos adicionales)",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "persistent_timer",
      "label": "Persistir el temporizador entre visitas",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_days",
      "label": "Mostrar días",
      "default": false
    },
    {
      "type": "text",
      "id": "days_label",
      "label": "Etiqueta para días",
      "default": "Días"
    },
    {
      "type": "text",
      "id": "hours_label",
      "label": "Etiqueta para horas",
      "default": "Horas"
    },
    {
      "type": "text",
      "id": "minutes_label",
      "label": "Etiqueta para minutos",
      "default": "Minutos"
    },
    {
      "type": "text",
      "id": "seconds_label",
      "label": "Etiqueta para segundos",
      "default": "Segundos"
    },
    {
      "type": "range",
      "id": "timer_size",
      "min": 40,
      "max": 120,
      "step": 5,
      "label": "Tamaño del temporizador (px)",
      "default": 70
    },
    {
      "type": "color",
      "id": "timer_background_color",
      "label": "Color de fondo del temporizador",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "timer_text_color",
      "label": "Color de texto del temporizador",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "timer_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "label": "Radio de borde del temporizador",
      "default": 8
    },
    {
      "type": "range",
      "id": "label_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "label": "Tamaño de etiquetas (px)",
      "default": 14
    },
    {
      "type": "checkbox",
      "id": "label_bold",
      "label": "Etiquetas en negrita",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_message_after",
      "label": "Mostrar mensaje al finalizar",
      "default": false
    },
    {
      "type": "text",
      "id": "message_after_end",
      "label": "Mensaje al finalizar",
      "default": "¡La oferta ha terminado!"
    },
    {
      "type": "checkbox",
      "id": "hide_after_end",
      "label": "Ocultar contador después de finalizar",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "redirect_after_end",
      "label": "Redirigir después de finalizar",
      "default": false
    },
    {
      "type": "url",
      "id": "redirect_url",
      "label": "URL de redirección"
    },
    {
      "type": "number",
      "id": "redirect_delay",
      "label": "Retraso antes de redirigir (segundos)",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Contador Regresivo",
      "category": "Promoción"
    }
  ]
}
{% endschema %}
