{% comment %}
  Contador Regresivo con Efecto Flip 3D
{% endcomment %}

<div class="countdown-banner" style="background-color: {{ section.settings.background_color }};">
  <div class="countdown-container">
    <div class="countdown-text">
      <h2 style="color: {{ section.settings.text_color }};">{{ section.settings.title_text }}</h2>
    </div>
    <div class="countdown-timer">
      <!-- HORAS -->
      <div class="timer-group">
        <div class="flip-card-container">
          <div class="flip-card" id="hours-card">
            <div class="flip-card-front">
              <span id="hours-current">00</span>
            </div>
            <div class="flip-card-back">
              <span id="hours-next">00</span>
            </div>
          </div>
        </div>
        <div class="timer-label">{{ section.settings.hours_label }}</div>
      </div>

      <!-- SEPARADOR -->
      <div class="timer-separator">
        <div class="separator-dot"></div>
        <div class="separator-dot"></div>
      </div>

      <!-- MINUTOS -->
      <div class="timer-group">
        <div class="flip-card-container">
          <div class="flip-card" id="minutes-card">
            <div class="flip-card-front">
              <span id="minutes-current">00</span>
            </div>
            <div class="flip-card-back">
              <span id="minutes-next">00</span>
            </div>
          </div>
        </div>
        <div class="timer-label">{{ section.settings.minutes_label }}</div>
      </div>

      <!-- SEPARADOR -->
      <div class="timer-separator">
        <div class="separator-dot"></div>
        <div class="separator-dot"></div>
      </div>

      <!-- SEGUNDOS -->
      <div class="timer-group">
        <div class="flip-card-container">
          <div class="flip-card" id="seconds-card">
            <div class="flip-card-front">
              <span id="seconds-current">00</span>
            </div>
            <div class="flip-card-back">
              <span id="seconds-next">00</span>
            </div>
          </div>
        </div>
        <div class="timer-label">{{ section.settings.seconds_label }}</div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Estilos básicos */
  .countdown-banner {
    width: 100%;
    padding: 15px 0;
    background-color: #FF001D;
  }

  .countdown-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  /* Estilos del texto */
  .countdown-text {
    width: 50%;
  }

  .countdown-text h2 {
    color: #FFFFFF;
    font-family: 'Montserrat', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    text-transform: uppercase;
  }

  /* Estilos del temporizador */
  .countdown-timer {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timer-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 2px;
  }

  /* Estilos de las tarjetas flip */
  .flip-card-container {
    width: {{ section.settings.timer_size }}px;
    height: {{ section.settings.timer_size }}px;
    perspective: 1000px;
  }

  .flip-card {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.5s;
    transform-origin: center center;
    border-radius: {{ section.settings.timer_border_radius }}px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  }

  .flip-card.flipping {
    transform: rotateX(180deg);
  }

  .flip-card-front, .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: {{ section.settings.timer_border_radius }}px;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .flip-card-front {
    z-index: 2;
  }

  .flip-card-back {
    transform: rotateX(180deg);
  }

  .flip-card-front span, .flip-card-back span {
    font-size: calc({{ section.settings.timer_size }}px * 0.6);
    font-weight: bold;
    color: black;
    text-align: center;
  }

  /* Estilos de los separadores */
  .timer-separator {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    height: {{ section.settings.timer_size }}px;
    padding: 0 5px;
  }

  .separator-dot {
    width: 8px;
    height: 8px;
    background-color: white;
    border-radius: 50%;
    margin: 5px 0;
  }

  /* Estilos de las etiquetas */
  .timer-label {
    color: white;
    font-size: {{ section.settings.label_size }}px;
    margin-top: 5px;
    text-align: center;
  }

  /* Media Queries */
  @media screen and (max-width: 768px) {
    .countdown-container {
      flex-direction: column;
    }

    .countdown-text, .countdown-timer {
      width: 100%;
    }

    .countdown-text {
      margin-bottom: 15px;
      text-align: center;
    }

    .countdown-text h2 {
      font-size: calc({{ section.settings.title_size }}px * 0.7);
    }

    .flip-card-container {
      width: calc({{ section.settings.timer_size }}px * 0.8);
      height: calc({{ section.settings.timer_size }}px * 0.8);
    }

    .flip-card-front span, .flip-card-back span {
      font-size: calc({{ section.settings.timer_size }}px * 0.45);
    }

    .separator-dot {
      width: 6px;
      height: 6px;
    }

    .timer-label {
      font-size: calc({{ section.settings.label_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 480px) {
    .countdown-text h2 {
      font-size: calc({{ section.settings.title_size }}px * 0.5);
    }

    .flip-card-container {
      width: calc({{ section.settings.timer_size }}px * 0.7);
      height: calc({{ section.settings.timer_size }}px * 0.7);
    }

    .flip-card-front span, .flip-card-back span {
      font-size: calc({{ section.settings.timer_size }}px * 0.4);
    }

    .timer-separator {
      padding: 0 3px;
    }

    .separator-dot {
      width: 5px;
      height: 5px;
      margin: 4px 0;
    }

    .timer-label {
      font-size: calc({{ section.settings.label_size }}px * 0.8);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Referencias a los elementos
    const hoursCard = document.getElementById('hours-card');
    const minutesCard = document.getElementById('minutes-card');
    const secondsCard = document.getElementById('seconds-card');

    const hoursCurrent = document.getElementById('hours-current');
    const hoursNext = document.getElementById('hours-next');
    const minutesCurrent = document.getElementById('minutes-current');
    const minutesNext = document.getElementById('minutes-next');
    const secondsCurrent = document.getElementById('seconds-current');
    const secondsNext = document.getElementById('seconds-next');

    // Variables para seguimiento
    let currentHours = -1;
    let currentMinutes = -1;
    let currentSeconds = -1;

    // Variable para evitar múltiples flip simultáneos
    let isFlipping = {
      hours: false,
      minutes: false,
      seconds: false
    };

    // Establecer tiempo de finalización
    let countDownDate;

    {% if section.settings.date_type == 'specific_date' %}
      // Usar fecha específica
      countDownDate = new Date("{{ section.settings.end_date }}").getTime();
    {% else %}
      // Usar duración desde ahora
      countDownDate = new Date();
      countDownDate.setHours(countDownDate.getHours() + {{ section.settings.duration_hours }});
      countDownDate.setMinutes(countDownDate.getMinutes() + {{ section.settings.duration_minutes }});
      countDownDate = countDownDate.getTime();
    {% endif %}

    // Si el timer es persistente, guardar en localStorage
    {% if section.settings.persistent_timer %}
      const storedEndTime = localStorage.getItem('countdownEndTime');
      if (storedEndTime) {
        countDownDate = parseInt(storedEndTime);
      } else {
        localStorage.setItem('countdownEndTime', countDownDate);
      }
    {% endif %}

    // Función para formatear números
    function formatNumber(num) {
      return num < 10 ? "0" + num : num.toString();
    }

    // Función para aplicar el efecto flip
    function flipCard(card, currentEl, nextEl, newValue) {
      // Formatear el valor
      newValue = formatNumber(newValue);

      // Si el valor no ha cambiado o ya está animando, no hacer nada
      const unit = card.id.split('-')[0];
      if (currentEl.textContent === newValue || isFlipping[unit]) return;

      // Marcar como animando
      isFlipping[unit] = true;

      // Establecer el nuevo valor en la parte posterior
      nextEl.textContent = newValue;

      // Iniciar el flip
      card.classList.add('flipping');

      // Cuando termina la animación
      setTimeout(function() {
        // Actualizar el valor frontral
        currentEl.textContent = newValue;
        // Quitar clase de animación
        card.classList.remove('flipping');
        // Ya no está animando
        isFlipping[unit] = false;
      }, 500);
    }

    // Actualizar contador cada segundo
    const countdown = setInterval(function() {
      const now = new Date().getTime();
      const distance = countDownDate - now;

      // Si el contador llegó a cero
      if (distance <= 0) {
        clearInterval(countdown);

        hoursCurrent.textContent = "00";
        minutesCurrent.textContent = "00";
        secondsCurrent.textContent = "00";

        {% if section.settings.hide_after_end %}
        setTimeout(function() {
          document.querySelector('.countdown-banner').style.display = 'none';
        }, 3000);
        {% endif %}

        {% if section.settings.redirect_after_end and section.settings.redirect_url != blank %}
        setTimeout(function() {
          window.location.href = "{{ section.settings.redirect_url }}";
        }, {{ section.settings.redirect_delay }} * 1000);
        {% endif %}

        {% if section.settings.persistent_timer %}
        localStorage.removeItem('countdownEndTime');
        {% endif %}

        return;
      }

      // Cálculo de tiempo
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      // Verificar cambios para aplicar flip
      if (hours !== currentHours) {
        // Detectar si cambió el último dígito
        const lastDigitChanged = (hours % 10) !== (currentHours % 10);

        // Solo hacer flip si cambió el último dígito o es la primera vez
        if (currentHours === -1 || lastDigitChanged) {
          flipCard(hoursCard, hoursCurrent, hoursNext, hours);
        } else {
          // Actualizar sin animación
          hoursCurrent.textContent = formatNumber(hours);
          hoursNext.textContent = formatNumber(hours);
        }
        currentHours = hours;
      }

      if (minutes !== currentMinutes) {
        const lastDigitChanged = (minutes % 10) !== (currentMinutes % 10);
        if (currentMinutes === -1 || lastDigitChanged) {
          flipCard(minutesCard, minutesCurrent, minutesNext, minutes);
        } else {
          minutesCurrent.textContent = formatNumber(minutes);
          minutesNext.textContent = formatNumber(minutes);
        }
        currentMinutes = minutes;
      }

      if (seconds !== currentSeconds) {
        const lastDigitChanged = (seconds % 10) !== (currentSeconds % 10);
        if (currentSeconds === -1 || lastDigitChanged) {
          flipCard(secondsCard, secondsCurrent, secondsNext, seconds);
        } else {
          secondsCurrent.textContent = formatNumber(seconds);
          secondsNext.textContent = formatNumber(seconds);
        }
        currentSeconds = seconds;
      }
    }, 1000);

    // Inicializar valores
    setTimeout(function() {
      const now = new Date().getTime();
      const distance = countDownDate - now;

      if (distance > 0) {
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        hoursCurrent.textContent = formatNumber(hours);
        hoursNext.textContent = formatNumber(hours);
        minutesCurrent.textContent = formatNumber(minutes);
        minutesNext.textContent = formatNumber(minutes);
        secondsCurrent.textContent = formatNumber(seconds);
        secondsNext.textContent = formatNumber(seconds);

        currentHours = hours;
        currentMinutes = minutes;
        currentSeconds = seconds;
      }
    }, 100);
  });
</script>

