    display: flex;
    justify-content: center;
    gap: 30px;
    margin-top: 20px;
  }

  .leyenda-item {
    display: flex;
    align-items: center;
  }

  .leyenda-color {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    margin-right: 8px;
  }

