<section class="tabla-puestos">
  <div class="container">
    <div class="section-title">
      <h2>{{ section.settings.tabla_title }}</h2>
    </div>

    <div class="tabla-container">
      <div class="tabla-grid">
        {% for i in (0..99) %}
          {% assign mod = i | modulo: 10 %}
          {% if mod == 0
            or mod == 1
            or i == 29
            or i == 30
            or i == 31
            or i == 32
            or i == 34
            or i == 37
            or i == 38
            or i == 40
            or i == 41
            or i == 44
            or i == 49
            or i == 50
            or i == 52
            or i == 59
            or i == 68
            or i == 70
            or i == 72
            or i == 75
            or i == 76
            or i == 78
            or i == 81
            or i == 87
            or i == 90
            or i == 91
            or i == 93
            or i == 94
            or i == 97
            or i == 99
          %}
            <div class="tabla-item disponible">{{ i }}</div>
          {% else %}
            <div class="tabla-item no-disponible"></div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="leyenda">
        <div class="leyenda-item">
          <div class="leyenda-color disponible"></div>
          <span>Disponible</span>
        </div>
        <div class="leyenda-item">
          <div class="leyenda-color no-disponible"></div>
          <span>No disponible</span>
        </div>
      </div>
    </div>

    <div class="text-center" style="margin-top: 40px;">
      <a href="{{ section.settings.button_link }}" class="button">
        <svg viewBox="0 0 24 24" width="24" height="24" fill="white">
          <path d="M17.498 14.382c-.301-.15-1.767-.867-2.04-.966-.273-.101-.473-.15-.673.15-.197.295-.771.964-.944 1.162-.175.195-.349.21-.646.075-.3-.15-1.263-.465-2.403-1.485-.888-.795-1.484-1.77-1.66-2.07-.174-.3-.019-.465.13-.615.136-.135.301-.345.451-.523.146-.181.194-.301.297-.496.1-.21.049-.375-.025-.524-.075-.15-.672-1.62-.922-2.206-.24-.584-.487-.51-.672-.51-.172-.015-.371-.015-.571-.015-.2 0-.523.074-.797.359-.273.3-1.045 1.02-1.045 2.475s1.07 2.865 1.219 3.075c.149.195 2.105 3.195 5.1 4.485.714.3 1.27.48 1.704.629.714.227 1.365.195 1.88.121.574-.091 1.767-.721 2.016-1.426.255-.705.255-1.29.18-1.425-.074-.135-.27-.21-.57-.345z"/>
        </svg>
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Tabla de Puestos",
  "settings": [
    {
      "type": "text",
      "id": "tabla_title",
      "label": "Título de la tabla",
      "default": "Tabla de puestos"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "QUIERO ACCEDER AL GRUPO DE WHATSAPP"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Enlace del botón",
      "default": "https://wa.me/573000000000"
    }
  ],
  "presets": [
    {
      "name": "Tabla de Puestos",
      "category": "Sorteos"
    }
  ]
}
{% endschema %}
