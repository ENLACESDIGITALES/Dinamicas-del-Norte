  .tabla-grid {
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    gap: 8px;
    margin-bottom: 20px;
  }

  .tabla-item {
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 16px;
    border-radius: 4px;
  }

  .tabla-item.disponible {
    background-color: #25D366;
    color: #FFFFFF;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .tabla-item.disponible:hover {
    transform: scale(1.05);
    box-shadow: 0 2px 8px rgba(37, 211, 102, 0.5);
  }

  .tabla-item.no-disponible {
    background-color: #444444;
  }

