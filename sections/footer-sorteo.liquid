<style>
  #shopify-section-{{ section.id }} {
    {% if section.settings.mostrar_footer %}
      display: block;
    {% else %}
      display: none;
    {% endif %}
  }

  .footer {
    background-color: {{ section.settings.color_fondo }};
    color: {{ section.settings.color_texto }};
    padding: 60px 0 20px;
  }

  .footer a {
    color: {{ section.settings.color_enlaces }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer a:hover {
    color: {{ section.settings.color_enlaces_hover }};
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-column h3 {
    font-size: {{ section.settings.tamano_titulos }}px;
    font-weight: bold;
    margin-bottom: 20px;
    color: {{ section.settings.color_titulos }};
    position: relative;
  }

  .footer-column h3:after {
    content: '';
    display: block;
    width: 40px;
    height: 3px;
    background-color: {{ section.settings.color_acento }};
    margin-top: 10px;
  }

  .footer-column p {
    font-size: {{ section.settings.tamano_texto }}px;
    line-height: 1.5;
    margin-bottom: 15px;
  }

  .footer-column .contacto-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 15px;
  }

  .footer-column .contacto-icono {
    margin-right: 10px;
    width: {{ section.settings.tamano_iconos }}px;
    height: {{ section.settings.tamano_iconos }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.color_acento }};
    flex-shrink: 0;
  }

  .footer-column .contacto-texto {
    flex: 1;
  }

  .social-icons {
    display: flex;
    gap: 15px;
    margin-top: 20px;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.tamano_iconos_sociales }}px;
    height: {{ section.settings.tamano_iconos_sociales }}px;
    background-color: {{ section.settings.color_acento }};
    border-radius: 50%;
    color: {{ section.settings.color_fondo }} !important;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .social-icon:hover {
    transform: translateY(-3px);
    background-color: {{ section.settings.color_acento_hover }};
  }

  .social-icon svg {
    width: calc({{ section.settings.tamano_iconos_sociales }}px * 0.5);
    height: calc({{ section.settings.tamano_iconos_sociales }}px * 0.5);
  }

  .enlaces-rapidos {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .enlaces-rapidos a {
    position: relative;
    padding-left: 15px;
    font-size: {{ section.settings.tamano_texto }}px;
  }

  .enlaces-rapidos a:before {
    content: '›';
    position: absolute;
    left: 0;
    color: {{ section.settings.color_acento }};
    font-size: calc({{ section.settings.tamano_texto }}px * 1.2);
  }

  .copyright {
    text-align: center;
    padding-top: 30px;
    margin-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: calc({{ section.settings.tamano_texto }}px - 2px);
  }

  .copyright a {
    font-weight: bold;
  }

  @media screen and (max-width: 768px) {
    .footer {
      padding: 40px 0 20px;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .footer-column h3 {
      font-size: calc({{ section.settings.tamano_titulos }}px - 2px);
    }

    .social-icons {
      justify-content: flex-start;
    }
  }
</style>

