{% comment %}
  Hero Sorteo Responsive con Controles Independientes
{% endcomment %}

<div class="hero-sorteo">
  <div class="hero-container">
    {% if section.settings.mobile_overlay_mode %}
      <!-- Estructura móvil con imagen-texto (modo móvil) -->
      <div class="hero-content-mobile">
        {% if section.settings.hero_image != blank %}
          <div class="hero-image-mobile">
            <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_title }}">
          </div>
        {% endif %}

        <div class="hero-text-mobile">
          <h1>{{ section.settings.hero_title }}</h1>
          <h2>{{ section.settings.hero_subtitle }}</h2>
          <p>{{ section.settings.hero_description }}</p>
        </div>
      </div>
    {% else %}
      <!-- Estructura original para desktop y móvil sin modo overlay -->
      <div class="hero-content">
        <div class="hero-text">
          <h1>{{ section.settings.hero_title }}</h1>
          <h2>{{ section.settings.hero_subtitle }}</h2>
          <p>{{ section.settings.hero_description }}</p>
        </div>

        {% if section.settings.hero_image != blank %}
          <div class="hero-image">
            <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_title }}">
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.show_arrow %}
      <div class="arrow-container">
        <div class="arrow-down">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="20" viewBox="0 0 24 12">
            <path d="M12 12L0 0h24z"/>
          </svg>
        </div>
      </div>
    {% endif %}

    <div class="button-container">
      <a href="{{ section.settings.button_link }}" class="whatsapp-button">
        <svg viewBox="0 0 24 24" width="24" height="24" fill="white">
          <path d="M17.498 14.382c-.301-.15-1.767-.867-2.04-.966-.273-.101-.473-.15-.673.15-.197.295-.771.964-.944 1.162-.175.195-.349.21-.646.075-.3-.15-1.263-.465-2.403-1.485-.888-.795-1.484-1.77-1.66-2.07-.174-.3-.019-.465.13-.615.136-.135.301-.345.451-.523.146-.181.194-.301.297-.496.1-.21.049-.375-.025-.524-.075-.15-.672-1.62-.922-2.206-.24-.584-.487-.51-.672-.51-.172-.015-.371-.015-.571-.015-.2 0-.523.074-.797.359-.273.3-1.045 1.02-1.045 2.475s1.07 2.865 1.219 3.075c.149.195 2.105 3.195 5.1 4.485.714.3 1.27.48 1.704.629.714.227 1.365.195 1.88.121.574-.091 1.767-.721 2.016-1.426.255-.705.255-1.29.18-1.425-.074-.135-.27-.21-.57-.345z"/>
        </svg>
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

<style>
  .hero-sorteo {
    position: relative;
    width: 100%;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: linear-gradient({{ section.settings.gradient_angle_desktop }}deg,
                {{ section.settings.background_color_start }},
                {{ section.settings.background_color_end }});
    color: {{ section.settings.text_color }};
    overflow: hidden; /* Asegura que ningún elemento se salga del contenedor */
  }

  /* Mejora en el botón de WhatsApp */
  .whatsapp-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.button_color }};
    color: white;
    text-decoration: none;
    font-weight: bold;
    padding: 16px 30px;
    border-radius: {{ section.settings.button_border_radius }}px;
    margin: 20px auto 0;
    max-width: 480px;
    transition: all 0.3s ease;
    {% if section.settings.button_shadow %}
    box-shadow: 0 4px 8px rgba(37, 211, 102, 0.3);
    {% endif %}
    text-transform: uppercase;
  }

  .whatsapp-button:hover {
    transform: translateY(-2px); /* Efecto de elevación */
    box-shadow: 0 6px 12px rgba(37, 211, 102, 0.4); /* Sombra más pronunciada */
  }

  .whatsapp-button:active {
    transform: translateY(1px); /* Efecto de presión */
  }

  .whatsapp-button svg {
    margin-right: 10px;
    filter: drop-shadow(0 1px 1px rgba(0,0,0,0.2)); /* Sombra suave al icono */
    width: 28px; /* Icono ligeramente más grande */
    height: 28px;
  }

  /* Mejora de la flecha */
  .arrow-container {
    position: relative;
    width: 100%;
    height: 40px;
    margin: 30px 0;
    text-align: center;
  }

  .arrow-down {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }

  /* Actualiza la flecha para que se vea más como en la imagen */
  .arrow-down svg {
    fill: {{ section.settings.arrow_color }};
    {% if section.settings.arrow_shadow %}
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
    {% endif %}
    width: 40px;
    height: 30px;
  }

  /* Estilos para la flecha personalizada más parecida a la mostrada */
  .arrow-down {
    width: 50px;
    height: 30px;
  }

  .hero-sorteo .arrow-container {
    margin: 20px auto 30px;
  }

  @media screen and (max-width: 768px) {
    .hero-sorteo {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
      background: linear-gradient({{ section.settings.gradient_angle_mobile }}deg,
                  {{ section.settings.background_color_start_mobile }},
                  {{ section.settings.background_color_end_mobile }});
    }

    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-text {
      width: 100%;
      padding-right: 0;
      margin-bottom: 30px;
      position: relative;
      z-index: 2;
    }

    .hero-image {
      width: 100%;
      text-align: center;
    }

    .hero-image img {
      max-width: {{ section.settings.mobile_image_scale }}%;
      margin: 0 auto;
      transform: translateX({{ section.settings.mobile_image_position_x }}px)
                 translateY({{ section.settings.mobile_image_position_y }}px);
    }

    .hero-sorteo h1 {
      font-size: 50px;
    }

    .hero-sorteo h2 {
      font-size: 28px;
    }

    .hero-sorteo p {
      font-size: 16px;
      margin: 0 auto 30px;
      max-width: 90%;
    }

    .whatsapp-button {
      padding: 12px 20px;
      font-size: 14px;
    }
  }

  /* Modo de superposición para móvil */
  @media screen and (max-width: 768px) {
    {% if section.settings.mobile_overlay_mode %}
    .hero-content {
      display: flex;
      flex-direction: column; /* Mostramos primero el texto y luego la imagen */
      position: relative;
      overflow: visible;
    }

    /* El texto va primero (arriba) */
    .hero-text {
      width: 100%;
      position: relative;
      z-index: 2; /* Mayor z-index para estar encima */
      padding: 20px 10px;
      margin-bottom: -100px; /* Solapamiento con la imagen */
      margin-bottom: calc(-100px + {{ section.settings.mobile_image_position_y }}px); /* Ajustable */
    }

    /* La imagen va después (abajo) */
    .hero-image {
      width: 100%;
      position: relative;
      z-index: 1; /* Menor z-index para estar debajo */
    }

    .hero-image img {
      width: 100%;
      display: block;
      max-width: 100%;
      margin: 0 auto;
    }

    /* Nos aseguramos que no haya efectos adicionales */
    .hero-sorteo h1,
    .hero-sorteo h2,
    .hero-sorteo p {
      text-shadow: none;
    }

    .hero-sorteo p {
      background-color: transparent;
      padding: 0;
      border-radius: 0;
    }
    {% endif %}
  }

  /* Estilos de la estructura especial para móvil */
  /* Solo visible en móvil y cuando mobile_overlay_mode está activo */
  .hero-content-mobile {
    display: none; /* Por defecto oculto */
  }

  @media screen and (max-width: 768px) {
    {% if section.settings.mobile_overlay_mode %}
    /* Ocultamos la estructura normal en móvil cuando overlay está activo */
    .hero-content {
      display: none;
    }

    /* Mostramos la nueva estructura */
    .hero-content-mobile {
      display: block;
      position: relative;
      overflow: visible;
    }

    /* Imagen primero (arriba) */
    .hero-image-mobile {
      width: 100%;
      text-align: center;
      margin-bottom: {{ section.settings.mobile_image_position_y }}px; /* Ajustable - cuánto espacio hay entre imagen y texto */
    }

    .hero-image-mobile img {
      width: 100%;
      max-width: 100%;
      display: block;
    }

    /* Texto después (abajo) */
    .hero-text-mobile {
      padding: 0 15px;
      text-align: center;
      margin-top: -100px; /* Hace que el texto se superponga con la imagen */
    }
    {% endif %}
  }
</style>

{% schema %}
{
  "name": "Hero Sorteo",
  "settings": [
    {
      "type": "header",
      "content": "Contenido de texto"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Título",
      "default": "SORTEO"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtítulo",
      "default": "3 GANADORES DIARIOS"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Descripción",
      "default": "Participar en nuestros sorteos te dará una experiencia emocionante, con la posibilidad real de ser uno de los tres ganadores diarios."
    },
    {
      "type": "header",
      "content": "Imagen - Escritorio"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de ganadores"
    },
    {
      "type": "range",
      "id": "desktop_image_scale",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Escala de imagen (escritorio)",
      "default": 100
    },
    {
      "type": "range",
      "id": "desktop_image_position_x",
      "min": -100,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición horizontal (escritorio)",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_image_position_y",
      "min": -100,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición vertical (escritorio)",
      "default": 0
    },
    {
      "type": "header",
      "content": "Imagen - Móvil"
    },
    {
      "type": "range",
      "id": "mobile_image_scale",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Escala de imagen (móvil)",
      "default": 100
    },
    {
      "type": "range",
      "id": "mobile_image_position_x",
      "min": -100,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición horizontal (móvil)",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_image_position_y",
      "min": -200,
      "max": 0,
      "step": 10,
      "unit": "px",
      "label": "Espacio entre imagen y texto",
      "default": -100,
      "info": "Valores negativos aumentan la superposición del texto sobre la imagen"
    },
    {
      "type": "checkbox",
      "id": "mobile_overlay_mode",
      "label": "Usar modo de superposición en móvil",
      "default": true,
      "info": "Coloca la imagen como fondo con el texto superpuesto"
    },
    {
      "type": "header",
      "content": "Fondo - Escritorio"
    },
    {
      "type": "color",
      "id": "background_color_start",
      "label": "Color de fondo inicial",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color_end",
      "label": "Color de fondo final",
      "default": "#7a6900"
    },
    {
      "type": "range",
      "id": "gradient_angle_desktop",
      "min": 0,
      "max": 360,
      "step": 5,
      "unit": "°",
      "label": "Ángulo del degradado",
      "default": 125
    },
    {
      "type": "header",
      "content": "Fondo - Móvil"
    },
    {
      "type": "color",
      "id": "background_color_start_mobile",
      "label": "Color de fondo inicial (móvil)",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color_end_mobile",
      "label": "Color de fondo final (móvil)",
      "default": "#FFCC00"
    },
    {
      "type": "range",
      "id": "gradient_angle_mobile",
      "min": 0,
      "max": 360,
      "step": 5,
      "unit": "°",
      "label": "Ángulo del degradado (móvil)",
      "default": 180
    },
    {
      "type": "header",
      "content": "Colores y Estilos"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de texto",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color de acento (subtítulo)",
      "default": "#FFCC00"
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Mostrar flecha indicadora",
      "default": true
    },
    {
      "type": "color",
      "id": "arrow_color",
      "label": "Color de la flecha",
      "default": "#FFCC00"
    },
    {
      "type": "checkbox",
      "id": "arrow_shadow",
      "label": "Mostrar sombra en la flecha",
      "default": true
    },
    {
      "type": "header",
      "content": "Botón de WhatsApp"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "QUIERO ACCEDER AL GRUPO DE WHATSAPP"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón (grupo de WhatsApp)"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#25D366"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Redondeo de esquinas del botón",
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "button_shadow",
      "label": "Mostrar sombra en el botón",
      "default": true
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado superior",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado inferior",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado superior (móvil)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado inferior (móvil)",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Hero Sorteo",
      "category": "Sorteos"
    }
  ]
}
{% endschema %}
