{% comment %}
  Hero Sorteo con Fondo Degradado y Ganadores
{% endcomment %}

<section class="hero-sorteo">
  <div class="hero-container">
    <div class="hero-content">
      <div class="hero-text">
        <h1>{{ section.settings.hero_title }}</h1>
        <h2>{{ section.settings.hero_subtitle }}</h2>
        <p>{{ section.settings.hero_description }}</p>
      </div>

      {% if section.settings.hero_image != blank %}
        <div class="hero-image">
          <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_title }}">
        </div>
      {% endif %}
    </div>

    <div class="arrow-container">
      <div class="arrow-down">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="20" viewBox="0 0 24 12">
          <path d="M12 12L0 0h24z" fill="rgba(255,255,255,0.5)"/>
        </svg>
      </div>
    </div>

    <div class="button-container">
      <a href="{{ section.settings.button_link }}" class="whatsapp-button">
        <svg viewBox="0 0 24 24" width="24" height="24" fill="white">
          <path d="M17.498 14.382c-.301-.15-1.767-.867-2.04-.966-.273-.101-.473-.15-.673.15-.197.295-.771.964-.944 1.162-.175.195-.349.21-.646.075-.3-.15-1.263-.465-2.403-1.485-.888-.795-1.484-1.77-1.66-2.07-.174-.3-.019-.465.13-.615.136-.135.301-.345.451-.523.146-.181.194-.301.297-.496.1-.21.049-.375-.025-.524-.075-.15-.672-1.62-.922-2.206-.24-.584-.487-.51-.672-.51-.172-.015-.371-.015-.571-.015-.2 0-.523.074-.797.359-.273.3-1.045 1.02-1.045 2.475s1.07 2.865 1.219 3.075c.149.195 2.105 3.195 5.1 4.485.714.3 1.27.48 1.704.629.714.227 1.365.195 1.88.121.574-.091 1.767-.721 2.016-1.426.255-.705.255-1.29.18-1.425-.074-.135-.27-.21-.57-.345z"/>
        </svg>
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</section>

<style>
  .hero-sorteo {
    position: relative;
    width: 100%;
    background: linear-gradient({{ section.settings.gradient_angle_desktop }}deg,
                 {{ section.settings.background_color_start }},
                 {{ section.settings.background_color_end }});
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    z-index: 2;
  }

  .hero-text {
    width: 50%;
    padding-right: 30px;
  }

  .hero-image {
    width: 50%;
    text-align: right;
    position: relative;
    z-index: 1;
    overflow: visible;
  }

  .hero-image img {
    max-width: none;
    max-height: none;
    display: block;
    margin-left: auto;
    transform: translate({{ section.settings.image_position_x | minus: 50 }}%, {{ section.settings.image_position_y | minus: 50 }}%) scale({{ section.settings.image_scale | divided_by: 100.0 }});
  }

  .hero-sorteo h1 {
    font-size: 70px;
    font-weight: 700;
    margin: 0 0 10px 0;
    line-height: 1;
    text-transform: uppercase;
  }

  .hero-sorteo h2 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 20px 0;
    color: {{ section.settings.accent_color }};
  }

  .hero-sorteo p {
    font-size: 18px;
    line-height: 1.5;
    margin: 0 0 30px 0;
    max-width: 600px;
  }

  .arrow-container {
    position: relative;
    width: 100%;
    height: 40px;
    margin-bottom: 20px;
    display: {% if section.settings.show_arrow %}block{% else %}none{% endif %};
  }

  .arrow-down {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    z-index: 1;
  }

  .arrow-down svg path {
    fill: {{ section.settings.arrow_color | color_modify: 'alpha', 0.5 }};
  }

  .button-container {
    position: relative;
    z-index: 2;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-20px) translateX(-50%);
    }
    60% {
      transform: translateY(-10px) translateX(-50%);
    }
  }

  .whatsapp-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.button_color }};
    color: white;
    text-decoration: none;
    font-weight: bold;
    padding: 16px 30px;
    border-radius: 8px;
    margin: 0 auto;
    max-width: 480px;
    transition: background-color 0.3s ease;
  }

  .whatsapp-button:hover {
    background-color: {{ section.settings.button_color | color_darken: 15 }};
  }

  .whatsapp-button svg {
    margin-right: 10px;
  }

  @media screen and (max-width: 768px) {
    .hero-sorteo {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
      background: linear-gradient({{ section.settings.gradient_angle_mobile }}deg,
                   {{ section.settings.background_color_start }} 0%,
                   {{ section.settings.background_color_end | color_modify: 'alpha', section.settings.gradient_opacity | divided_by: 100.0 }} 100%);
      position: relative;
    }

    .hero-content {
      flex-direction: column;
      text-align: center;
      position: relative;
    }

    .hero-text {
      width: 100%;
      padding-right: 0;
      position: relative;
      z-index: 5;
    }

    .hero-image {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 1;
      margin: 0;
    }

    .hero-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      margin: 0;
      position: absolute;
      top: 0;
      object-position: {{ section.settings.image_position_x }}% {{ section.settings.image_position_y }}%;
    }

    .hero-sorteo h1 {
      font-size: 50px;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
      position: relative;
      z-index: 2;
    }

    .hero-sorteo h2 {
      font-size: 28px;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    }

    .hero-sorteo p {
      font-size: 16px;
      position: relative;
      z-index: 2;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.9);
      padding: 10px;
      margin: 15px auto 30px;
      max-width: 90%;
    }

    .arrow-container {
      position: relative;
      z-index: 5;
    }

    .arrow-down svg path {
      fill: {{ section.settings.arrow_color | color_modify: 'alpha', 0.8 }};
    }

    .whatsapp-button {
      padding: 12px 20px;
      font-size: 14px;
      position: relative;
      z-index: 5;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Sorteo",
  "settings": [
    {
      "type": "header",
      "content": "Contenido de texto"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Título",
      "default": "SORTEO"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtítulo",
      "default": "3 GANADORES DIARIOS"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Descripción",
      "default": "Participar en nuestros sorteos te dará una experiencia emocionante, con la posibilidad real de ser uno de los tres ganadores diarios."
    },
    {
      "type": "header",
      "content": "Imagen"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de ganadores"
    },
    {
      "type": "range",
      "id": "image_position_x",
      "min": -50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Posición horizontal de imagen",
      "default": 50,
      "info": "0% = izquierda, 100% = derecha, 50% = centro"
    },
    {
      "type": "range",
      "id": "image_position_y",
      "min": -50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Posición vertical de imagen",
      "default": 50,
      "info": "0% = arriba, 100% = abajo, 50% = centro"
    },
    {
      "type": "range",
      "id": "image_scale",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "%",
      "label": "Escala de la imagen",
      "default": 100
    },
    {
      "type": "header",
      "content": "Fondo y Colores"
    },
    {
      "type": "color",
      "id": "background_color_start",
      "label": "Color de fondo inicial",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color_end",
      "label": "Color de fondo final",
      "default": "#FFCC00"
    },
    {
      "type": "range",
      "id": "gradient_angle_desktop",
      "min": 0,
      "max": 360,
      "step": 5,
      "unit": "°",
      "label": "Ángulo del degradado (escritorio)",
      "default": 90
    },
    {
      "type": "range",
      "id": "gradient_angle_mobile",
      "min": 0,
      "max": 360,
      "step": 5,
      "unit": "°",
      "label": "Ángulo del degradado (móvil)",
      "default": 180
    },
    {
      "type": "range",
      "id": "gradient_position",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Posición del degradado",
      "default": 40
    },
    {
      "type": "range",
      "id": "gradient_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Opacidad del degradado final",
      "default": 90
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color de acento para subtítulo",
      "default": "#FFCC00"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de texto principal",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Botón de WhatsApp"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "QUIERO ACCEDER AL GRUPO DE WHATSAPP"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón (grupo de WhatsApp)"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#25D366"
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Mostrar flecha hacia abajo",
      "default": true
    },
    {
      "type": "color",
      "id": "arrow_color",
      "label": "Color de la flecha",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado superior",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado inferior",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado superior (móvil)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Espaciado inferior (móvil)",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Hero Sorteo",
      "category": "Sorteos"
    }
  ]
}
{% endschema %}
