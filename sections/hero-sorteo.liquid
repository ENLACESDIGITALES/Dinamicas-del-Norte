    },
    {
      "type": "header",
      "content": "Elementos"
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Mostrar flecha",
      "default": true
    },
    {
      "type": "color",
      "id": "arrow_color",
      "label": "Color de flecha",
      "default": "#FFCC00"
    },
    {
      "type": "range",
      "id": "arrow_vertical_position",
      "min": -50,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición vertical de flecha",
      "default": 20
    },
    {
      "type": "text",
      "id": "button_text",
