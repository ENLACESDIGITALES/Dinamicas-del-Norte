{% comment %}
  Hero Sorteo Responsive con Controles Independientes
{% endcomment %}

<div class="hero-sorteo">
  <div class="hero-container">
    <div class="hero-content">
      <div class="hero-text">
        <h1>{{ section.settings.hero_title }}</h1>
        <h2>{{ section.settings.hero_subtitle }}</h2>
        <p>{{ section.settings.hero_description }}</p>
      </div>

      {% if section.settings.hero_image != blank %}
        <div class="hero-image">
          <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_title }}">
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_arrow %}
      <div class="arrow-container">
        <div class="arrow-down">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="30" viewBox="0 0 40 30">
            <path d="M20 30L0 0h40z"/>
          </svg>
        </div>
      </div>
    {% endif %}

    <div class="button-container">
      <a href="{{ section.settings.button_link }}" class="whatsapp-button">
        <svg viewBox="0 0 24 24" width="28" height="28" fill="white">
          <path d="M17.498 14.382c-.301-.15-1.767-.867-2.04-.966-.273-.101-.473-.15-.673.15-.197.295-.771.964-.944 1.162-.175.195-.349.21-.646.075-.3-.15-1.263-.465-2.403-1.485-.888-.795-1.484-1.77-1.66-2.07-.174-.3-.019-.465.13-.615.136-.135.301-.345.451-.523.146-.181.194-.301.297-.496.1-.21.049-.375-.025-.524-.075-.15-.672-1.62-.922-2.206-.24-.584-.487-.51-.672-.51-.172-.015-.371-.015-.571-.015-.2 0-.523.074-.797.359-.273.3-1.045 1.02-1.045 2.475s1.07 2.865 1.219 3.075c.149.195 2.105 3.195 5.1 4.485.714.3 1.27.48 1.704.629.714.227 1.365.195 1.88.121.574-.091 1.767-.721 2.016-1.426.255-.705.255-1.29.18-1.425-.074-.135-.27-.21-.57-.345z"/>
        </svg>
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

<style>
  /* ======= ESTILOS BASE PARA TODAS LAS VISTAS ======= */
  .hero-sorteo {
    position: relative;
    width: 100%;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: linear-gradient({{ section.settings.gradient_angle_desktop }}deg,
                {{ section.settings.background_color_start }},
                {{ section.settings.background_color_end }});
    color: {{ section.settings.text_color }};
    overflow: hidden;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .hero-text {
    width: 50%;
    padding-right: 30px;
  }

  .hero-image {
    width: 50%;
    text-align: right;
  }

  .hero-image img {
    display: block;
    max-width: {{ section.settings.desktop_image_scale }}%;
    margin-left: auto;
    transform: translateX({{ section.settings.desktop_image_position_x }}px)
               translateY({{ section.settings.desktop_image_position_y }}px);
  }

  .hero-sorteo h1 {
    font-size: 70px;
    font-weight: 700;
    margin: 0 0 10px 0;
    line-height: 1;
    text-transform: uppercase;
  }

  .hero-sorteo h2 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 20px 0;
    color: {{ section.settings.accent_color }};
  }

  .hero-sorteo p {
    font-size: 18px;
    line-height: 1.5;
    margin: 0 0 30px 0;
    max-width: 600px;
  }

  /* Estilos de la flecha */
  .arrow-container {
    position: relative;
    width: 100%;
    height: 50px;
    margin: 20px 0;
    text-align: center;
  }

  .arrow-down {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    width: 40px;
    height: 30px;
  }

  .arrow-down svg {
    fill: {{ section.settings.arrow_color }};
    {% if section.settings.arrow_shadow %}
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
    {% endif %}
    width: 100%;
    height: 100%;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-20px) translateX(-50%);
    }
    60% {
      transform: translateY(-10px) translateX(-50%);
    }
  }

  /* Estilos del botón de WhatsApp */
  .button-container {
    width: 100%;
    padding: 10px 20px 20px;
  }

  .whatsapp-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.button_color }};
    color: white;
    text-decoration: none;
    font-weight: bold;
    padding: 16px 30px;
    border-radius: {{ section.settings.button_border_radius }}px;
    margin: 20px auto 0;
    max-width: 480px;
    transition: all 0.3s ease;
    {% if section.settings.button_shadow %}
    box-shadow: 0 4px 8px rgba(37, 211, 102, 0.3);
    {% endif %}
    text-transform: uppercase;
  }

  .whatsapp-button:hover {
    transform: translateY(-2px);
    {% if section.settings.button_shadow %}
    box-shadow: 0 6px 12px rgba(37, 211, 102, 0.4);
    {% endif %}
  }

  .whatsapp-button:active {
    transform: translateY(1px);
  }

  .whatsapp-button svg {
    margin-right: 10px;
    filter: drop-shadow(0 1px 1px rgba(0,0,0,0.2));
    width: 28px;
    height: 28px;
  }

  /* ======= ESTILOS PARA MÓVIL ======= */
  @media screen and (max-width: 768px) {
    .hero-sorteo {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
      background: linear-gradient({{ section.settings.gradient_angle_mobile }}deg,
                  {{ section.settings.background_color_start_mobile }},
                  {{ section.settings.background_color_end_mobile }});
    }

    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-text {
      width: 100%;
      padding-right: 0;
      margin-bottom: 30px;
    }

    .hero-image {
      width: 100%;
      text-align: center;
    }

    .hero-image img {
      max-width: {{ section.settings.mobile_image_scale }}%;
      margin: 0 auto;
      transform: translateX({{ section.settings.mobile_image_position_x }}px)
                 translateY({{ section.settings.mobile_image_position_y }}px);
    }

    .hero-sorteo h1 {
      font-size: 50px;
    }

    .hero-sorteo h2 {
      font-size: 28px;
    }

    .hero-sorteo p {
      font-size: 16px;
      margin: 0 auto 30px;
      max-width: 90%;
    }

    .whatsapp-button {
      padding: 14px 24px;
      font-size: 14px;
      width: 90%;
    }

    /* Configuración específica para el modo de superposición */
    {% if section.settings.mobile_overlay_mode %}
    /* Crear una versión especial para móvil con imagen arriba y texto abajo */
    .hero-content {
      display: flex;
      flex-direction: column;
      position: relative;
    }

    /* Imagen arriba */
    .hero-image {
      width: 100%;
      margin-bottom: {{ section.settings.mobile_image_position_y }}px;
      order: 1; /* Asegura que aparezca primero */
    }

    .hero-image img {
      width: 100%;
      max-width: 100%;
      margin: 0 auto;
      transform: none; /* Eliminamos la transformación para control directo */
    }

    /* Texto abajo con superposición */
    .hero-text {
      width: 100%;
      order: 2; /* Asegura que aparezca después */
      margin-top: -120px; /* Crea superposición con la imagen */
      z-index: 2; /* Asegura que esté encima */
      position: relative;
      padding: 0 15px;
    }

    /* Mejora la legibilidad del texto */
    .hero-sorteo h1,
    .hero-sorteo h2,
    .hero-sorteo p {
      text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
    }
    {% endif %}
  }
</style>

{% schema %}
{
  "name": "Hero Sorteo",
  "settings": [
    {
      "type": "header",
      "content": "Contenido de texto"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Título",
      "default": "SORTEO"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtítulo",
      "default": "3 GANADORES DIARIOS"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Descripción",
      "default": "Participar en nuestros sorteos te dará una experiencia emocionante, con la posibilidad real de ser uno de los tres ganadores diarios."
    },
    {
      "type": "header",
      "content": "Imagen - Escritorio"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de ganadores"
    },
    {
      "type": "range",
      "id": "desktop_image_scale",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Escala de imagen (escritorio)",
      "default": 100
    },
    {
      "type": "range",
      "id": "desktop_image_position_x",
      "min": -100,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición horizontal (escritorio)",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_image_position_y",
      "min": -100,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición vertical (escritorio)",
      "default": 0
    },
    {
      "type": "header",
      "content": "Imagen - Móvil"
    },
    {
      "type": "range",
      "id": "mobile_image_scale",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Escala de imagen (móvil)",
      "default": 100
