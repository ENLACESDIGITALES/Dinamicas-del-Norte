{% comment %}
  Hero Sorteo con Fondo Degradado y Ganadores
{% endcomment %}

<section class="hero-sorteo">
  <div class="hero-container">
    <div class="hero-content">
      <div class="hero-text">
        <h1>{{ section.settings.hero_title }}</h1>
        <h2>{{ section.settings.hero_subtitle }}</h2>
        <p>{{ section.settings.hero_description }}</p>
      </div>

      {% if section.settings.hero_image != blank %}
        <div class="hero-image">
          <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="{{ section.settings.hero_title }}">
        </div>
      {% endif %}
    </div>

    <div class="arrow-container">
      <div class="arrow-down">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="20" viewBox="0 0 24 12">
          <path d="M12 12L0 0h24z" fill="rgba(255,255,255,0.5)"/>
        </svg>
      </div>
    </div>

    <div class="button-container">
      <a href="{{ section.settings.button_link }}" class="whatsapp-button">
        <svg viewBox="0 0 24 24" width="24" height="24" fill="white">
          <path d="M17.498 14.382c-.301-.15-1.767-.867-2.04-.966-.273-.101-.473-.15-.673.15-.197.295-.771.964-.944 1.162-.175.195-.349.21-.646.075-.3-.15-1.263-.465-2.403-1.485-.888-.795-1.484-1.77-1.66-2.07-.174-.3-.019-.465.13-.615.136-.135.301-.345.451-.523.146-.181.194-.301.297-.496.1-.21.049-.375-.025-.524-.075-.15-.672-1.62-.922-2.206-.24-.584-.487-.51-.672-.51-.172-.015-.371-.015-.571-.015-.2 0-.523.074-.797.359-.273.3-1.045 1.02-1.045 2.475s1.07 2.865 1.219 3.075c.149.195 2.105 3.195 5.1 4.485.714.3 1.27.48 1.704.629.714.227 1.365.195 1.88.121.574-.091 1.767-.721 2.016-1.426.255-.705.255-1.29.18-1.425-.074-.135-.27-.21-.57-.345z"/>
        </svg>
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</section>

<style>
  .hero-sorteo {
    position: relative;
    width: 100%;
    background: linear-gradient(90deg, #000000 0%, #000000 40%, rgba(255, 204, 0, 0.9) 100%);
    color: white;
    padding: 80px 0 120px;
    overflow: hidden;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    z-index: 2;
  }

  .hero-text {
    width: 50%;
    padding-right: 30px;
  }

  .hero-image {
    width: 50%;
    text-align: right;
    position: relative;
    z-index: 1;
  }

  .hero-image img {
    max-width: 100%;
    height: auto;
    display: block;
    margin-left: auto;
  }

  .hero-sorteo h1 {
    font-size: 70px;
    font-weight: 700;
    margin: 0 0 10px 0;
    line-height: 1;
    text-transform: uppercase;
  }

  .hero-sorteo h2 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 20px 0;
    color: {{ section.settings.accent_color | default: '#FFCC00' }};
  }

  .hero-sorteo p {
    font-size: 18px;
    line-height: 1.5;
    margin: 0 0 30px 0;
    max-width: 600px;
  }

  .arrow-container {
    position: relative;
    width: 100%;
    height: 40px;
    margin-bottom: 20px;
  }

  .arrow-down {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    z-index: 1;
  }

  .button-container {
    position: relative;
    z-index: 2;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-20px) translateX(-50%);
    }
    60% {
      transform: translateY(-10px) translateX(-50%);
    }
  }

  .whatsapp-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #25D366;
    color: white;
    text-decoration: none;
    font-weight: bold;
    padding: 16px 30px;
    border-radius: 8px;
    margin: 0 auto;
    max-width: 480px;
    transition: background-color 0.3s ease;
  }

  .whatsapp-button:hover {
    background-color: #128C7E;
  }

  .whatsapp-button svg {
    margin-right: 10px;
  }

  @media screen and (max-width: 768px) {
    .hero-sorteo {
      padding: 60px 0 100px;
      background: linear-gradient(180deg, #000000 0%, rgba(255, 204, 0, 0.9) 100%);
    }

    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-text {
      width: 100%;
      padding-right: 0;
      position: relative;
      z-index: 2;
    }

    .hero-image {
      width: 100%;
      margin-top: -30px;
      margin-bottom: -40px;
      z-index: 1;
    }

    .hero-image img {
      margin: 0 auto;
      transform: scale(1.1);
    }

    .hero-sorteo h1 {
      font-size: 50px;
    }

    .hero-sorteo h2 {
      font-size: 28px;
    }

    .hero-sorteo p {
      font-size: 16px;
      position: relative;
      z-index: 2;
      background: rgba(0,0,0,0.5);
      padding: 15px;
      border-radius: 8px;
      margin: 0 auto 30px;
    }

    .whatsapp-button {
      padding: 12px 20px;
      font-size: 14px;
      position: relative;
      z-index: 3;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Sorteo",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Título",
      "default": "SORTEO"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtítulo",
      "default": "3 GANADORES DIARIOS"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Descripción",
      "default": "Participar en nuestros sorteos te dará una experiencia emocionante, con la posibilidad real de ser uno de los tres ganadores diarios."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de ganadores"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Color de acento",
      "default": "#FFCC00"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "QUIERO ACCEDER AL GRUPO DE WHATSAPP"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón (grupo de WhatsApp)"
    }
  ],
  "presets": [
    {
      "name": "Hero Sorteo",
      "category": "Sorteos"
    }
  ]
}
{% endschema %}
