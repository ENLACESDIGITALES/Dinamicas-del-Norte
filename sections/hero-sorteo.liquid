      "default": "QUIERO ACCEDER AL GRUPO DE WHATSAPP"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Enlace del botón",
      "default": "#"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#25D366"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Redondeo del botón",
      "default": 12
    },
    {
      "type": "range",
      "id": "button_vertical_position",
      "min": -50,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Posición vertical del botón",
      "default": 0
