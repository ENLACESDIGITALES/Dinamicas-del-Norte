      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen principal"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Esquinas redondeadas",
      "default": 0
    },
    {
      "type": "range",
      "id": "desktop_image_position_x",
